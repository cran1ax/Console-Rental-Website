# ═══════════════════════════════════════════════════════════════════
# Corner Console — Production Environment Variables
# ═══════════════════════════════════════════════════════════════════
#
# Copy this file:  cp .env.prod.example .env.prod
# Fill in ALL values marked with <CHANGE_ME> before deploying.
#
# NEVER commit .env.prod to version control!

# ─── Django Core ────────────────────────────────────────────────
DJANGO_SETTINGS_MODULE=config.settings.prod
DJANGO_SECRET_KEY=<CHANGE_ME_generate_with_python_c_"from_django.core.management.utils_import_get_random_secret_key;print(get_random_secret_key())">
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_ADMIN_URL=secret-admin-panel/

# ─── Database (PostgreSQL) ──────────────────────────────────────
DATABASE_URL=postgres://corner_console:<DB_PASSWORD>@db:5432/corner_console_db
DB_CONN_MAX_AGE=600
POSTGRES_DB=corner_console_db
POSTGRES_USER=corner_console
POSTGRES_PASSWORD=<CHANGE_ME_strong_password>

# ─── Redis ──────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/2

# ─── Celery ─────────────────────────────────────────────────────
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ─── Stripe (LIVE keys) ────────────────────────────────────────
STRIPE_PUBLISHABLE_KEY=pk_live_<CHANGE_ME>
STRIPE_SECRET_KEY=sk_live_<CHANGE_ME>
STRIPE_WEBHOOK_SECRET=whsec_<CHANGE_ME>

# ─── Email (SMTP) ──────────────────────────────────────────────
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<CHANGE_ME>@gmail.com
EMAIL_HOST_PASSWORD=<CHANGE_ME_app_password>

# ─── AWS S3 — Media Storage (optional) ─────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=ap-south-1

# ─── Sentry — Error Tracking ───────────────────────────────────
SENTRY_DSN=https://<key>@sentry.io/<project_id>
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ─── CORS ───────────────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ─── Site URLs ──────────────────────────────────────────────────
SITE_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ─── Gunicorn ───────────────────────────────────────────────────
WEB_CONCURRENCY=5
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_TIMEOUT=120
GUNICORN_LOG_LEVEL=info

# ─── Flower (Celery monitoring) ────────────────────────────────
FLOWER_USER=admin
FLOWER_PASSWORD=<CHANGE_ME>
